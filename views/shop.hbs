<!doctype html>
<html>
    <head>
        <style>
            input[type="text"]{
                border: 1px solid black;
                border-radius: 10px;
                width: 25%;
            }
            .box{
                background-color: blanchedalmond;
                border: 1px solid black;
                border-radius: 4px;
                height: fit-content;
                width: 30%;
                padding: 2px;
                margin: auto;
            }
            </style>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    
        <title>Connect</title>
        </head>
        <body style="text-align: center;">
            {{>nav}}
            <br>
            <h2 style="text-align: center;">Connect With Shops</h2>
            <hr>
                <form method="POST" action="/shop">
                <input type="text" name="shop" placeholder="Search By Name.....">
                <input type="submit" value="Search...">
                </form>
            <p id="shop">
               {{#each shops}}
               <div class="box">
               {{this.name}}<br>
               {{this.address}}<br>
               {{this.contact}}<br>
               <h5>Products</h5>
                Masks : {{this.products.mask}}<br>
                PPE : {{this.products.ppe}}<br>
                Ventilators :{{this.products.ventilator}}<br>
                Gowns :{{this.products.gown}}<br>
                <form method="POST" action="/message">
               <button name={{this.name}}>Contact</button>
               </form>
               </div>
               <br>
               {{/each}}
            </p>
            <script>
             
            </script>
            </body>
    </html>